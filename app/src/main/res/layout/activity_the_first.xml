<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TheFirstActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/wp6734699"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#CD7F32"
            android:gravity="center"
            android:layout_marginStart="50dp"
            android:text="Advising alcohol app"
            android:textColor="@color/black"
            android:textSize="25dp">

        </TextView>

        <TextView
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#FDD9B5"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:text="Do you have a party today? Our app will help you to choose alcohol and snacks!"
            android:layout_height="130dp">

        </TextView>

        <TextView
            android:layout_width="300dp"
            android:layout_marginTop="90dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/black"
            android:background="@drawable/rounded_corners"
            android:textColor="@color/white"
            android:text=" What would you like to drink?"
            android:textSize="22dp"
            android:layout_height="45dp">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="#CD7F32"
                android:text="Beer"
                android:id="@+id/beer"
                android:layout_marginStart="25dp"
                android:onClick="onClickBeerActivity">

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/vine"
                android:backgroundTint="#CD7F32"
                android:text="Vine"
                android:layout_marginStart="50dp"
                android:onClick="onClickVineActivity">

            </Button>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/vodka"
                android:backgroundTint="#CD7F32"
                android:text="Vodka"
                android:layout_marginStart="50dp"
                android:onClick="onClickVodkaActivity">

            </Button>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>